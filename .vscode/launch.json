{
    "version": "0.2.0",
    "configurations": [
    {
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "name": "node",
        "program": "${workspaceFolder}/dist/index.js",
        "request": "launch",
        "restart": true,
        "skipFiles": [
            "<node_internals>/**"
        ],
        "type": "node"
    },
    {
        "request": "launch",
        "type": "node",
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "name": "node (nodemon)",
        "program": "${workspaceFolder}/src/index.ts",
        "restart": true,
        "runtimeExecutable": "yarn",
        "runtimeArgs": [
            "dev"
        ],
        "skipFiles": [
            "<node_internals>/**"
        ]
    }
    ]
}